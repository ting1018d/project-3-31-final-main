<div class="container py-0 my-0">  
    {{!-- layout adjust--}}
    <div class="row row-cols-1 row-cols-md-1"> 
      <div class="col mb-4">

        <div class="card card-body">
          <h3></h3>
          <form action="/bookings/admin" method="post">
            <div class="form-group">
          
              <select class="form-control" id="facility" name="facility">
                  {{!-- <option selected>Select Sport</option> --}}
                  <option value="RA01">Room A</option>
                  <option value="RB01">Room B</option>
              </select>
                            
            </div>
            <div class="form-group">
              <label for="maintStart">Maintenance Start</label>
              <input
                  type="date" 
                  id="maintStart" 
                  class="form-control" 
                  name="maintStart" 
                  value="{{maintStart}}"
              ></input>
            </div>
          
            <div class="form-group">
              <label for="maintEnd">Maintenance end</label>
              <input
                  type="date" 
                  id="maintEnd" 
                  class="form-control" 
                  name="maintEnd" 
                  value="{{maintEnd}}"
              ></input>
            </div>

            <button type="submit" class="btn btn-light" name="action">Submit</button>
          </form>
        </div>
      </div>
    </div>
</div>