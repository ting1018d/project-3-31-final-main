<div class="container py-2 my-2" style="background-color: #374764; border: 2px solid #796241; border-radius : 15px;">

<div class="container py-4 my-4" >  
    <div class="row row-cols-1 row-cols-md-2">
      <div class="col mb-0">
        <div class="card" style="background-color: #e0d2ba; border: 2px solid #796241; border-radius : 15px;">
          <div class="card-body">
          
          {{#if avatar.data}}
            <img class="mb-4 rounded-circle mx-auto d-block" src="data:image/{{avatar.contentType}}; base64, {{avatar.data}}" width="200" height="200">
              <div class="col mb-12">
                  
              </div>
 
          {{else}}
            <p><h3 class="text-center text-muted">Create avatar</h3></p>
            <div class="text-center mb-4">
            <img class="mb-4 rounded-circle mx-auto d-block" src="" alt="" width="150" height="150">
            <form action="/users/profile" enctype="multipart/form-data"method="POST">
            <label for="avatarUpload" class="form-text text-center text-muted"><small>upload your avatar now</small></label>  
          {{/if}}
            </p>
          {{!-- upload box --}}
            
            <div class="text-center mb-3">
              <div class="card-body"> 
                <div class="row row-cols-2 row-cols-md-1">
                  <div class="">
                    <div class="col mb-12">
                      <button type="submit" class="btn btn-dark" style="background-color :#8b817a;" >Upload</button> 
                    </div>

                    <div class="col mb-12">
                      <form action="/users/profile?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="submit" class="btn btn-light text-muted" value="Delete">
                      </form>
                    </div>
                  </div>
                </div>
              </div>

              <div class="">
                  <div class="col mb-10">         
                      <input 
                      type="file" accept="image/*" 
                      name="avatarUpload"
                      id="avatarUpload"
                      class="form-control-sm"/>
               
                  </div>
                
             
                  <div class="col mb-12">
                    <p><h3 class="text-center" style="color: #8b817a;">User name : {{name}}</h3></p>
                    <p><h3 class="text-center" style="color: #8b817a;">Email     : {{email}}</h3></p>
                  </div>

                                     
              </div>

              <div class="card-body"> 
                 <div class="row row-cols-1 row-cols-md-1">
                    <div class="col mb-10">
                      <a href="/bookings/add" type="submit" class="btn btn-dark" style="background-color :#8b817a;">Add Bookings</a> 
                    </div>

                    <div class="col mb-0">
                      <a href="/bookings" type="submit" class="btn btn-light" style="background-color :white;"> View Bookings</a> 
                    </div>                   
                </div>
              </div>

            </div>    
        </div>
      </div>
    </div>
