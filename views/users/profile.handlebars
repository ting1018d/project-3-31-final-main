  }

input[type=file]::file-selector-button {
  margin-right: 30px;
  border: none;
  background: grey;
  padding: 0px 10px;
  border-radius: 5px;
  color: #fff;
  cursor: pointer;
  transition: background .2s ease-in-out;
}

